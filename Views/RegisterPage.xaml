<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:task_manager.ViewsModels"
             x:Class="task_manager.Views.RegisterPage"
             Title="Registro"
             BackgroundColor="White"
             BindingContext="{Binding Source={x:Type viewModels:RegisterViewModel}}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Crear Cuenta"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Mensaje de error -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center" />

            <!-- Campos del formulario -->
            <Entry Placeholder="Nombre completo"
                   Text="{Binding Name}"
                   TextColor="Black" />
            <!-- Establecer el color del texto -->

            <Entry Placeholder="Correo electr칩nico"
                   Keyboard="Email"
                   Text="{Binding Email}"
                   TextColor="Black" />
            <!-- Establecer el color del texto -->

            <Entry Placeholder="Contrase침a"
                   IsPassword="True"
                   Text="{Binding Password}"
                   TextColor="Black" />
            <!-- Establecer el color del texto -->

            <Entry Placeholder="Confirmar contrase침a"
                   IsPassword="True"
                   Text="{Binding ConfirmPassword}"
                   TextColor="Black" />
            <!-- Establecer el color del texto -->

            <!-- Bot칩n de registro -->
            <Button Text="Registrarse"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    IsEnabled="{Binding IsNotBusy}" />

            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
