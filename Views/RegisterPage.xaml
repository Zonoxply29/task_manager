<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:task_manager.ViewsModels"
             x:Class="task_manager.Views.RegisterPage"
             Title="Registro"
             BackgroundColor="White"
             BindingContext="{Binding Source={x:Type viewModels:RegisterViewModel}}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Crear Cuenta"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Mensaje de error -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center" />

            <!-- Campos del formulario -->
            <Entry Placeholder="Nombre completo"
                   Text="{Binding Name}" />

            <Entry Placeholder="Correo electrónico"
                   Keyboard="Email"
                   Text="{Binding Email}" />

            <Entry Placeholder="Contraseña"
                   IsPassword="True"
                   Text="{Binding Password}" />

            <Entry Placeholder="Confirmar contraseña"
                   IsPassword="True"
                   Text="{Binding ConfirmPassword}" />

            <!-- Botón de registro -->
            <Button Text="Registrarse"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    IsEnabled="{Binding IsNotBusy}" />

            <ActivityIndicator IsVisible="{Binding IsBusy}" 
                               IsRunning="{Binding IsBusy}"
                               HorizontalOptions="Center" />

            <Label Text="¿Ya tienes una cuenta?"
                   HorizontalOptions="Center" />

            <Button Text="Iniciar sesión"
                    Command="{Binding NavigateToLoginCommand}"
                    TextColor="#007AFF"
                    BackgroundColor="Transparent" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>